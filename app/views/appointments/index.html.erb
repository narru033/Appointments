<h1>Listing Appointments</h1>

<table class= "table table-bordered">
  <thead>
    <tr>
      <th>Date of visit</th>
      <th>Pet</th>
      <th>Requires reminder of appointment</th>
      <th>Reason for visit</th>
      <th>Doctor</th>
      <th>Pet Name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @appointments.each do |appointment| %>
      <tr>
        <td><%= appointment.date_of_visit %></td>
        <td><%= appointment.pet_name %></td>
        <td><%= appointment.requires_reminder_of_appointment %></td>
        <td><%= appointment.reason_for_visit %></td>
        <td><%= appointment.doctor.try(:name)   %></td>
        <td><%= appointment.pet.try(:name_of_pet) %></td>
        <td><%= link_to 'Show', appointment %></td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
        <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

